[user]
	name = Brandon Brown
	email = brandon.brown@ymail.com
[core]
	excludesfile = /Users/bbrown/.gitignore_global
	editor = code --wait -n
	autocrlf = false
	safecrlf = true
	pager = cat
[diff]
    tool = default-difftool
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE
[color]
  	ui = auto
[color "branch"]
  	current = green reverse
  	local = yellow
  	remote = green
[color "diff"]
  	meta = yellow bold
  	frag = magenta bold
  	old = red bold
  	new = green bold
[color "status"]
  	added = yellow
  	changed = green
  	untracked = cyan
[color "hist"]
[alias]
	st = status
[alias]
	pom = pull origin master
[alias]
	submodule-rm = pull origin master
	clearstage = rm -r --cached
[alias]
    ignored = !git ls-files -v | grep "^[[:lower:]]"
[remote "stage"]
	receivepack = git receive-pack
[remote "staging"]
	receivepack = git receive-pack
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = /usr/local/bin/diffmerge --merge --result=\"$MERGED\"\"$LOCAL\" \"$BASE\" \"$REMOTE\"
	trustExitCode = true
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge $LOCAL $REMOTE
[alias]
  co = checkout
  cm = commit
  st = status
  br = branch
  gl = log --oneline --decorate --graph
  hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  type = cat-file -t
  dump = cat-file -p
[rerere]
	enabled = false
